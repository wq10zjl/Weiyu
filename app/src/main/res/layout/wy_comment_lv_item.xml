                  android:textSize="18dp" android:textColor="#333333" android:minLines="1"/>
        <LinearLayout android:layout_marginTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/comment_tv_floor" android:layout_weight="1" android:text="xæ¥¼" android:textSize="17dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/comment_tv_time" android:layout_weight="4" android:text="time" android:textSize="17dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
