<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
    <ImageView android:id="@+id/comment_iv_gender" android:layout_width="52dp" android:layout_height="52dp" android:padding="10dp"
               android:src="@drawable/wy_icon_female"/>
    <LinearLayout android:orientation="vertical" android:layout_margin="10dp" android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/comment_tv_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="name"
                  android:textSize="18dp"/>
